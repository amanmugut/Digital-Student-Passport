<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/academic_back"
    tools:context=".AcademicDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Hi\nAman"
            android:textColor="#ffff"
            android:textSize="@dimen/_22ssp"
            android:layout_marginStart="@dimen/_230sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/acme"/>

    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Academic Details"
            android:textColor="#ffff"
            android:layout_marginTop="@dimen/_70sdp"
            android:textSize="@dimen/_28ssp"
            android:layout_marginStart="@dimen/_65sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/acme"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_290sdp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/academic_upload_back"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Year"
                            android:textColor="#6D0A0A"
                            android:textSize="@dimen/_18ssp"
                            android:layout_marginStart="@dimen/_60sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/acme"/>

                        //kaam
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_45sdp"
                                android:background="@color/transparent1"
                                android:hint="E2K***"
                                android:fontFamily="@font/acme"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/white"
                                android:textColorHint="#D3D3D3" />


                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:background="@color/transparent1"
                                android:hint="E2K***"
                                android:fontFamily="@font/acme"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/white"
                                android:textColorHint="#D3D3D3" />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/ripple_button_background"
                android:text="save"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold">
            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
    </ScrollView>



</LinearLayout>